<h2 class="ui center aligned large icon header">
        Hurry up, bro!
        <i class="tiny paper plane outline icon"></i>
</h2>

<h6 class="ui center aligned tiny icom header">
    ...but do it quietly.
</h6>



<div class="ui placeholder segment">
    
    <div class="ui two column very relaxed stackable grid">
        <div class="column">
            <h5>Login</h5>
            <%= form_for(:session, html: {class: "ui form", role: "form"}, url: login_path) do |f| %>
                <div class="field">
                        <%= f.label :username, "You know what to do" %>
                    <div class="ui left icon input">
                        <%= f.text_field :username, placeholder: "Username" %>
                        <i class="user icon"></i>
                    </div>
                </div>

                <div class="field">
                    <%= f.label :password, "That secret stuff" %>
                    <div class="ui left icon input">
                        <%= f.password_field :password, placeholder: "Password" %>
                        <i class="lock icon"></i>
                    </div>
                </div>
                <%= f.button "whatever", class: "ui black submit button"%>
            <%end%>
        </div>
        
        <div class="middle aligned column">
            <div class="ui placeholder segment">
                <div class="ui two column very relaxed stackable grid">
                    <div class="column">
                            <h5>Create Account</h5>
                        <%= form_for(:user, html: {class: "ui form", role: "form"}, url: signup_path) do |f| %>
                            <div class="field">
                                    <%= f.label :username, "Don't use anything recognizable" %>
                                <div class="ui left icon input">
                                    <%= f.text_field :username, placeholder: "Username" %>
                                    <i class="user icon"></i>
                                </div>
                            </div>
            
                            <div class="field">
                                <%= f.label :password, "Put whatever you want" %>
                                <div class="ui left icon input">
                                    <%= f.password_field :password, placeholder: "Password" %>
                                    <i class="lock icon"></i>
                                </div>
                            </div>
                            <%= f.button "Shhhh", class: "ui black submit button"%>
                        <%end%>
                    </div>
                </div>
            </div>
        </div>
</div>
